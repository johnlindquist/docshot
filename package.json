{
  "name": "docshot",
  "version": "1.0.0",
  "description": "CLI tool to convert documentation into terminal-style images for efficient Claude context usage",
  "type": "module",
  "bin": {
    "docshot": "./dist/index.js",
    "docload": "./dist/docload.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "bun build src/index.ts src/docload.ts --outdir dist --target bun",
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cli",
    "documentation",
    "images",
    "claude",
    "context",
    "tokens"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.81",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "^1.0.0",
    "semantic-release": "^23.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/github": "^9.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.0"
  }
}
